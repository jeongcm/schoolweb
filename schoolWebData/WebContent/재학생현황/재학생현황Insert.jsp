	String saveDir = application.getRealPath("/Upload/");
	int maxSize = 1024 * 1024 * 100;
	String encType = "euc-kr";

	MultipartRequest multipartRequest = new MultipartRequest(request, saveDir, maxSize, encType,
			new DefaultFileRenamePolicy());
	File file = multipartRequest.getFile("file");
	File tmpFile = new File(file.getAbsolutePath()); //임시 저장된 파일
	Workbook wb = WorkbookFactory.create(new File(file.getPath()));
	try {

		Class.forName("com.mysql.jdbc.Driver");
		Connection con = (Connection) DriverManager
				.getConnection("jdbc:mysql://localhost:3306/schoolData?autoReconnect=true", "root", "123123");
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		Sheet sheet = wb.getSheetAt(0);
	
		Row row;
		DataFormatter formatter = new DataFormatter(Locale.US);

		재학생현황EditAction edit = new 재학생현황EditAction();
		재학생현황Dao dao = new 재학생현황Dao();
		int 년도 = 0;
		String 입력부서 = (String) session.getAttribute("id");

		for (int i = 1; i <= sheet.getLastRowNum(); i++) {
			row = sheet.getRow(i);
			System.out.println("import line 번호(멈춘곳 다음이 에러가 발생한 라인입니다.) :"+i);

			년도 = (int) row.getCell(0).getNumericCellValue();
			String 기준 = formatter.formatCellValue(row.getCell(2));
			String 학과명 = formatter.formatCellValue(row.getCell(1));
			int 학생정원 = (int) row.getCell(3).getNumericCellValue();
			int 군휴학자 = (int) row.getCell(4).getNumericCellValue();
			int 타학과전과자 = (int) row.getCell(5).getNumericCellValue();
			int 정원내 = (int) row.getCell(6).getNumericCellValue();
			int 정원외 = (int) row.getCell(7).getNumericCellValue();
			int 계 = 정원내+정원외;
			float 정원내재학생충원율 = edit.정원내재학생충원율(정원내, 학생정원, 군휴학자,타학과전과자);
			float 전체재학생충원율 = edit.전체재학생충원율(계, 학생정원, 군휴학자,타학과전과자);
			float 재학생충원율 = edit.재학생충원율(전체재학생충원율, 정원내재학생충원율);

			String sql = "insert into 재학생현황(년도,기준,학과명,학생정원,군휴학자,타학과전과자,정원내,정원외,계,정원내재학생충원율,전체재학생충원율,재학생충원율,입력부서) values(?,?,?,?,?,?,?,?,?,?,?,?,?);";
			pstmt = (PreparedStatement) con.prepareStatement(sql);
			pstmt.setInt(1, 년도);
			pstmt.setString(2, 기준);
			pstmt.setString(3, 학과명);
			pstmt.setInt(4, 학생정원);
			pstmt.setInt(5, 군휴학자);
			pstmt.setInt(6, 타학과전과자);
			pstmt.setInt(7, 정원내);
			pstmt.setInt(8, 정원외);
			pstmt.setInt(9, 계);
			pstmt.setFloat(10, 정원내재학생충원율);
			pstmt.setFloat(11, 전체재학생충원율);
			pstmt.setFloat(12, 재학생충원율);
			pstmt.setString(13, 입력부서);
			pstmt.execute();

		}
		
		edit.비율재계산();
		
		pstmt.close();
		con.close();
		wb.close();

	} catch (ClassNotFoundException e) {
		e.printStackTrace();
	} catch (SQLException ex) {
		ex.printStackTrace();
	} catch (IOException ioe) {
		ioe.printStackTrace();
	} catch (NullPointerException npe) {
		npe.printStackTrace();
		System.out.print("엑셀 문서에 널값이 있습니다");
		if (tmpFile.exists()) {
			wb.close();
			tmpFile.delete();
		}
